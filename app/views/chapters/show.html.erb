
<div class="navbar" id="chapter-nav-bar">
		<a class="brand" id="current_chapter_title"><%= @chapter.title %></a>

		<ul class="nav pull-right">
			<li>
						<a class="dropdown-toggle" data-toggle="dropdown" href="#">chapters</a>
							<ul id="chapters-dropdown" class="dropdown-menu">
								<% @manga.chapters.each do |chapter| %>
									<li id="chapter-dropdown">
										<%= link_to chapter.title, manga_chapter_path(@manga,chapter), 
												:id => dom_id(chapter), :data => {:name => chapter.title} %>
									</li>
								<% end %> 
							</ul>
			</li>
			<li id="chapter-previous-page"><a href="#">previous</a></li>
			<li id="chapter-next-page"><a href="#">next</a></li>
			<li>
						<a class="dropdown-toggle" data-toggle="dropdown" href="#">pages</a>
							<ul class="pages-dropdown dropdown-menu">
								<% @chapter.sorted_pages.each do |page| %>
									<li id="page-dropdown">
										<a href="#" id="<%= page.page_number %>"><%= page.page_number %></a>
									</li>
								<% end %> 
							</ul>
			</li>
		</ul>
</div>

<div id='chapter'>
	<% @chapter.sorted_pages.each do |page| %>
		<div id='<%= page.page_number %>' class='chapter-page' data-active="false">
			<%= image_tag page.image_url if page.image? %>
		</div>
	<% end %>
</div>
<div id="last_chapter">
	You've reached the last chapter of this series. Thanks for reading!
</div>



